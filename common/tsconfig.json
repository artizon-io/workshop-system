{
  "compilerOptions": {
    // Purely for linting
    "moduleResolution": "Node",
    "strict": true,
    
    // Webpack/ts-loader will respect these options
    "declarationDir": "types",
    "declaration": true,
    
    // Webpack/ts-loader won't respect these options
    "lib": ["ESNext", "DOM"],
    "target": "ES6",
    "module": "CommonJS"
  },
  // Webpack/ts-loader won't respect these options
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
}