{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "target": "ES6",
    "strict": true,
    "outDir": "build",
    "module": "CommonJS",
    "esModuleInterop": true,
    "importsNotUsedAsValues": "remove",
  },
  "watchOptions": {
    "excludeDirectories": [
      "node_modules"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}