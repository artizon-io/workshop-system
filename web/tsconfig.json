{
  "compilerOptions": {
    "jsx": "preserve",
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@*": ["./src/*"],
      "@artizon/design-system": ["./node_modules/@artizon/design-system/src"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}